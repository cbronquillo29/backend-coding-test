{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Backend Coding Test",
    "description": "Technical Assessment Test by Xendit"
  },
  "host": "localhost:8010",
  "basePath": "/",
  "tags": [
    {
      "name": "Health",
      "description": "Access to API Health Check"
    },
    {
      "name": "Rides",
      "description": "Access to Ride Details"
    }
  ],
  "schemes": [
    "http"
  ],
  "produces": [
    "application/json"
  ],
  "consumes": [
    "application/json"
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Check API health",
        "tags": [
          "Health"
        ],
        "description": "Check if server is up and running",
        "responses": {
          "200": {
            "description": "Healthy"
          }
        }
      }
    },
    "/rides": {
      "post": {
        "summary": "Upload ride details",
        "tags": [
          "Rides"
        ],
        "parameters": [
          {
            "name": "ride",
            "in": "body",
            "description": "Upload ride details",
            "schema": {
              "$ref": "#/definitions/RideRequest"
            }
          }
        ],
        "description": "Create and add new ride entry",
        "responses": {
          "200": {
            "description": "On successful adding, returns details of newly added ride",
            "schema": {
              "$ref": "#/definitions/Ride"
            }
          },
          "422": {
            "description": "Validation error"
          },
          "500": {
            "description": "Unknown server error"
          }
        }
      }
    },
    "/rides/{page}/{count}": {
      "get": {
        "summary": "Retrieve list of ride details",
        "tags": [
          "Rides"
        ],
        "description": "Retrieve ride details of all stored rides in paginated form",
        "parameters": [
          {
            "name": "page",
            "in": "path",
            "description": "Page number of ride details to be displayed",
            "required": true,
            "type": "integer"
          },
          {
            "name": "count",
            "in": "path",
            "description": "Maximum number of ride details per page",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful retrieval of ride details",
            "schema": {
              "$ref": "#/definitions/Rides"
            }
          },
          "404": {
            "description": "Could not find any rides"
          },
          "422": {
            "description": "Page number provided exceeds total number of ride details"
          },
          "500": {
            "description": "Unknown server error"
          }
        }
      }
    },
    "/rides/{id}": {
      "get": {
        "summary": "Find Ride by ID ",
        "tags": [
          "Rides"
        ],
        "description": "Returns a single Ride detail",
        "parameters": [
          {
            "name": "rideId",
            "in": "path",
            "description": "ID of ride detail to return",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful retrieval or ride detail",
            "schema": {
              "$ref": "#/definitions/Ride"
            }
          },
          "404": {
            "description": "Ride id not found"
          },
          "500": {
            "description": "Unknown server error"
          }
        }
      }
    }
  },
  "definitions": {
    "Ride": {
      "properties": {
        "rideId": {
          "type": "number"
        },
        "startLat": {
          "type": "number"
        },
        "startLong": {
          "type": "number"
        },
        "endLat": {
          "type": "number"
        },
        "endLong": {
          "type": "number"
        },
        "riderName": {
          "type": "string"
        },
        "driverName": {
          "type": "string"
        },
        "driverVehicle": {
          "type": "string"
        },
        "created": {
          "type": "string"
        }
      }
    },
    "Rides": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Ride"
      }
    },
    "RideRequest": {
      "properties": {
        "start_lat": {
          "type": "number"
        },
        "start_long": {
          "type": "number"
        },
        "end_lat": {
          "type": "number"
        },
        "end_long": {
          "type": "number"
        },
        "rider_name": {
          "type": "string"
        },
        "driver_name": {
          "type": "string"
        },
        "driver_vehicle": {
          "type": "string"
        }
      }
    }
  }
}